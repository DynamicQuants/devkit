{
  "name": "node-cli",
  "version": "0.0.0",
  "description": "Node CLI template",
  "private": true,
  "keywords": [
    "cli",
    "node"
  ],
  "bin": {
    "node-cli": "./dist/src/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "copy": "copyfiles ./files/**/* dist",
    "build": "pnpm clean && tsup",
    "lint": "eslint \"{src,tests}/**/*.{ts,json}\" --fix",
    "dev": "nodemon ./src/index.ts",
    "start": "node dist/src/index.js",
    "test": "jest --verbose",
    "test-watch": "jest --watch",
    "test-cov": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format-check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "dependencies": {
    "@octokit/rest": "^21.1.0",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "inquirer": "^12.2.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@dynamic-quants/configs": "^1.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5"
  }
}
