{
  "name": "@dynamic-quants/configs",
  "version": "1.0.0",
  "description": "Configurations for tools used by the Dynamic Quants Team",
  "author": "Dynamic Quants",
  "license": "MIT",
  "keywords": [
    "config",
    "tools",
    "eslint",
    "jest",
    "playwright",
    "prettier",
    "vite",
    "tailwind",
    "nextjs",
    "react",
    "typescript",
    "nestjs",
    "node"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DynamicQuants/devkit.git"
  },
  "exports": {
    "./eslint": {
      "import": "./src/eslint.mjs",
      "require": "./src/eslint.js"
    },
    "./jest": {
      "import": "./src/jest.mjs",
      "require": "./src/jest.js"
    },
    "./playwright": {
      "import": "./src/playwright.mjs",
      "require": "./src/playwright.js"
    },
    "./prettier": {
      "import": "./src/prettier.mjs",
      "require": "./src/prettier.js"
    },
    "./vite": {
      "import": "./src/vite.mjs",
      "require": "./src/vite.js"
    },
    "./tailwind": {
      "import": "./src/tailwind.mjs",
      "require": "./src/tailwind.js"
    },
    "./tsconfig/*.json": "./tsconfig/*.json"
  },
  "typesVersions": {
    "*": {
      "eslint": [
        "./src/eslint.d.ts"
      ],
      "jest": [
        "./src/jest.d.ts"
      ],
      "playwright": [
        "./src/playwright.d.ts"
      ],
      "prettier": [
        "./src/prettier.d.ts"
      ],
      "tailwind": [
        "./src/tailwind.d.ts"
      ],
      "vite": [
        "./src/vite.d.ts"
      ]
    }
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,ts,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,md,json}\"",
    "cp": "copyfiles -f package.json README.md LICENSE ./dist && copyfiles -f ./src/jest/snapshotResolver.js ./src/jest/.swcrc ./peers.json ./dist/src && copyfiles -f ./tsconfig/*.json ./dist/tsconfig",
    "build": "rimraf dist && tsup"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@nx/eslint": "^20.2.2",
    "@nx/eslint-plugin": "^20.2.2",
    "@nx/jest": "^20.2.2",
    "@nx/next": "^20.2.2",
    "@nx/react": "^20.2.2",
    "@nx/vite": "^20.2.2",
    "@playwright/test": "^1.49.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/find-root": "^1.1.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/semver": "^7.5.8",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "next": "15.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "3.4.15",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.16.0",
    "vite": "^5.4.11",
    "vite-plugin-dts": "~4.3.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@eslint/compat": "^1.2.3",
    "@nx/eslint": "^20.2.2",
    "@nx/eslint-plugin": "^20.2.2",
    "@nx/jest": "^20.2.2",
    "@nx/next": "^20.2.2",
    "@nx/react": "^20.2.2",
    "@nx/vite": "^20.2.2",
    "@playwright/test": "^1.49.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsonc-eslint-parser": "^2.4.0",
    "next": "15.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "tailwindcss": "3.4.15",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.6.3",
    "typescript-eslint": "^8.16.0",
    "vite": "^5.4.11",
    "vite-plugin-dts": "~4.3.0",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "./src/prettier.mjs"
}
