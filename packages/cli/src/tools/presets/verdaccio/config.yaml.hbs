storage: ../storage
uplinks:
  npmjs:
    url: https://registry.npmjs.org/
    maxage: 60m
listen:
  - localhost:{{port}}
web:
  # enable: false
  title: Local NPM Registry - Verdaccio
auth:
  htpasswd:
    file: ../storage/htpasswd
    max_users: 1
packages:
  "**":
    access: $all
    publish: $all
    unpublish: $all
    # proxy: 'npmjs'
log:
  type: stdout
  format: pretty
  level: warn
publish:
  allow_offline: true
