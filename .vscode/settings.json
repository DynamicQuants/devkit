{
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.exclude": {
    "**/__pycache__/": true,
    "**/.pytest_cache/": true,
    ".mypy_cache/": true,
    "**/.coverage": true
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "*.tera": "handlebars"
  },
  "[handlebars]": {
    "editor.formatOnSave": false
  },
  "yaml.schemaStore.enable": true
}
